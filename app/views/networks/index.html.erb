<div id='notice' class="alert alert-success">Great! Toggle the networks</div>

<h1 class='pull-left'>All your networks</h1>
<h3 class='pull-left' style='margin: 25px 0 0 20px;'>
  <a href='/networks' class='refresh' title='Changed any connections? Refresh'>
    <span class="glyphicon glyphicon-refresh"></span>
  </a>
</h3>
<div class='clearfix'></div>

<form action='start' class='ajax'>
  <table class='table table-striped table-bordered table-hover table-responsive'>
    <thead>
      <tr>
        <th style='width: 50px;' class='center'></th>
        <th>Network Name</th>
        <th>Address</th>
        <th>On / Off</th>
      </tr>
    </thead>

    <tbody>
      <% @networks.each_with_index do |network, index| %>
        <tr>
          <td class='center'>(<%= index + 1 %>)</td>
          <td><%= network['name'] %></td>
          <td><%= network['address'] %></td>
          <td style='width: 75px;'>
            <div class="progress">
              <div class="progress-bar progress-bar-success" role="progressbar" aria-valuenow="40" aria-valuemin="0" aria-valuemax="100">
                <span class="sr-only">40% Complete (success)</span>
              </div>
              <input type='checkbox' style='display:none' name="selected_networks[]<%= network['address'] %>" />
            </div>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br />
  <div class='center'>
    <button type="submit" id='start_stop_btn' class="btn btn-success btn-lg" data-method='start'>Start</button>
  </div>
</form>